<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <!-- Azure MySQL connection URL - update with your Azure MySQL server details -->
        <!-- For managed identity, use environment variables or configure in application.properties -->
        <property name="hibernate.connection.url">jdbc:mysql://${AZURE_MYSQL_SERVER_NAME}.mysql.database.azure.com:3306/${AZURE_MYSQL_DATABASE_NAME}</property>
        <!-- Username should be the managed identity name -->
        <property name="hibernate.connection.username">${AZURE_MYSQL_USERNAME}</property>
        <!-- Password removed - using Azure Managed Identity passwordless authentication -->
        <!-- Managed identity configuration is handled by Spring Cloud Azure in application.properties -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>

        <mapping class="lk.jiat.smarttrade.entity.City"/>
        <mapping class="lk.jiat.smarttrade.entity.Address"/>
        <mapping class="lk.jiat.smarttrade.entity.Status"/>
        <mapping class="lk.jiat.smarttrade.entity.Seller"/>
        <mapping class="lk.jiat.smarttrade.entity.User"/>
        <mapping class="lk.jiat.smarttrade.entity.Brand"/>
        <mapping class="lk.jiat.smarttrade.entity.Model"/>
        <mapping class="lk.jiat.smarttrade.entity.Color"/>
        <mapping class="lk.jiat.smarttrade.entity.Storage"/>
        <mapping class="lk.jiat.smarttrade.entity.Quality"/>
        <mapping class="lk.jiat.smarttrade.entity.Product"/>
        <mapping class="lk.jiat.smarttrade.entity.DeliveryType"/>
        <mapping class="lk.jiat.smarttrade.entity.Order"/>
        <mapping class="lk.jiat.smarttrade.entity.OrderItem"/>
        <mapping class="lk.jiat.smarttrade.entity.Discount"/>
        <mapping class="lk.jiat.smarttrade.entity.Stock"/>
        <mapping class="lk.jiat.smarttrade.entity.Cart"/>

    </session-factory>
</hibernate-configuration>